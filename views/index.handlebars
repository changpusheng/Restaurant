<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="d-flex justify-content-between search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <h4 class="mb-2">尋找餐廳：</h4>
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{searchKeyWord}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <form action="/" class="form-group" method="POST" id="formSort">
        <select name="sort" id="sort" class="btn btn btn-m" onchange="this.form.submit()">
          <option value="0" {{selected sortOption 0 }}>排序</option>
          <option value="1" {{selected sortOption 1}}>A -> Z</option>
          <option value="2" {{selected sortOption 2 }}>Z -> A</option>
          <option value="3" {{selected sortOption 3 }}>類別</option>
          <option value="4" {{selected sortOption 4 }}>地區</option>
        </select>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each item}}
        <div class="text-secondary">
          <div class="card mb-1">
            <a href="/restaurants/{{this._id}}"><img class="card-img-top" src="{{this.image}}" alt="{{this.name}}"></a>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="footer mb-1" style="text-align:right;">
              <a href="/restaurants/{{this._id}}" class="btn btn-outline-secondary btn-sm">
                詳細
              </a>
              <a href="/restaurants/{{this._id}}/edit" class="btn btn-outline-secondary btn-sm">
                編輯
              </a>
              <form action="/restaurants/{{this._id}}?_method=delete" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-outline-secondary btn-sm" onclick="return confirmDelete()">
                  下架
                </button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>