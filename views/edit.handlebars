<form class="editForm" action="/restaurants/{{item._id}}/edit" method="POST" novalidate>
  <h1 class="mb-1 restaurant-show-title">
    {{item.name}}</h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" name="category" id="category" placeholder="category" class="form-control"
            value="{{item.category}}" required>
          <div class="invalid-feedback">必要欄位</div>
        </div>
        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" name="location" id="location" placeholder="location" class="form-control"
            value="{{item.location}}" required>
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
          <div class="invalid-feedback">必要欄位</div>
        </div>
        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="number" name="phone" id="phone" placeholder="請輸入數字" class="form-control" value="{{item.phone}}"
            required>
          <div class="invalid-feedback">必要欄位</div>
        </div>
        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-menorah"></i>
            特色：
          </span>
          <textarea rows="2" cols="150" type="text" name="description" id="description" class="form-control"
            required>{{item.description}}</textarea>
          <div class="invalid-feedback">必要欄位</div>
        </div>

        <div>
          <button type="submit" class="btn btn-outline-secondary btn-m editSubmit">修改確認</button>
          <a href="/" class="btn btn-outline-secondary btn-m">
            取消
          </a>
        </div>
        <img class="rounded mx-auto d-block mb-4 w-100" src="{{item.image}}" alt="{{item.name}}"
          style="max-width: 600px;">
      </div>
    </div>
  </div>

</form>